@import url(//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css)

@import 'normalize'
@import 'default'

@import 'nib'

section-width = 70%
main-color = #333
red-color = #C94B40
orange-color = #F96A2A
green-color = #66CA71
light-color = #f8f8f8

@import 'syntax'

sans-font = 'Lato', 'Helvetica Neue', Helvetica, sans-serif
title-font = 'Lato', 'Helvetica Neue', Helvetica, sans-serif
mono-font = 'Source Code Pro', 'Andale Mono', monospace !default

a
  color: darken(green-color, 5%)
  &:hover
    text-decoration none

  
pre, code
  font-family mono-font

pre.highlight
  background light-color
  border-radius 4px
  padding: 12px
  border 1px solid darken(light-color, 5%)

button(button-color)
  color #fff
  background button-color
  text-decoration: none
  font-weight: bold
  text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.5)
  padding: 8px 16px
  border-radius: 4px
  border 1px solid darken(button-color, 25%)
  font-size: 18px

  &:hover
    text-decoration inherit
    background lighten(button-color, 10%)


html, body
  font-family sans-font
  color main-color

#masthead

  a
    color: main-color
    text-decoration none

  text-align center

  h1
    font-size: 72px
    margin 0
    margin-top 8px

    a
      &:hover
        text-decoration none

  h2
    text-align center
    font-size 32px
    margin 0
    margin-top -12px

  .download
    button(green-color)

  .github
    button(orange-color)

  ul
    margin 1.5em
    padding 0
    li
      padding 0 4px
      display inline-block

      i
        padding-right 4px

#mastfoot
  text-align: center

section
  width section-width
  margin auto

section#demo
  text-align: center

  .download
    button(green-color)

  iframe
    margin 1em
    width 100%
    height 500px
    border none
    box-shadow 0px 4px 24px 8px rgba(0, 0, 0, 0.1)

  .built-with
    font-size: 12px